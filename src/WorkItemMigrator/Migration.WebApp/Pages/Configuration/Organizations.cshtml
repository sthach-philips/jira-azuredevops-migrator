@page
@model OrganizationsModel
@{
    ViewData["Title"] = "Organizations";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Organizations</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createOrgModal">
        Create Organization
    </button>
</div>

<div class="row">
    @foreach (var org in Model.Organizations)
    {
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@org.Name</h5>
                    <p class="card-text">@org.Description</p>
                    <p class="text-muted small">Created: @org.CreatedAt.ToString("yyyy-MM-dd")</p>
                    <div class="btn-group">
                        <a href="/Configuration/Teams?orgId=@org.Id" class="btn btn-sm btn-outline-primary">Teams</a>
                        <a href="/Configuration/FieldMappings?orgId=@org.Id" class="btn btn-sm btn-outline-secondary">Field Mappings</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Create Organization Modal -->
<div class="modal fade" id="createOrgModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Create Organization</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="Name" name="NewOrganization.Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea class="form-control" id="Description" name="NewOrganization.Description" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>